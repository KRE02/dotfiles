[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore

[rerere]
	enabled = true
	autoupdate = true

[diff]
	tool = bc3

[merge]
	tool = bc3

[push]
	default = current

[pull]
	default = current
	rebase = true

[alias]
	co = checkout

	st = status

	mt = mergetool
	dt = difftool

	l  = log --oneline
	ll = log --oneline --graph --decorate

	ls = ls-files

	su = submodule update --init --recursive
	sd = submodule deinit --force --all

[rerere]
	enabled = true

[credential "https://github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential

[credential "https://gist.github.com"]
	helper =
	helper = !/usr/bin/gh auth git-credential
