#!/bin/bash

CDROM="/dev/cdrom"

tmpdir="$(mktemp -d)"
cd "$tmpdir" || exit 1
echo "Directory: $tmpdir"

echo "Getting disc ID..."
cd-discid "$CDROM" > discid

echo "Ripping..."
cdparanoia -d "$CDROM" -f -B

echo "Converting..."
find . -name "*.aiff" -exec flac {} \; -delete

echo "Running picard..."
if hash picard; then
    picard .
fi
